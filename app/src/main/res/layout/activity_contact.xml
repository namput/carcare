<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/md_cyan_900"
    tools:context=".ContactActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbarOpacity"
        app:title="ระบบจัดการร้านคาร์แคร์"
        app:titleTextColor="#fff"
        app:theme="@style/TransparentToolbar"
        app:navigationIcon="@drawable/ic_back_white"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:context="in.insideandroid.template.LoginActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null">

            <LinearLayout
                android:id="@+id/li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.gridlayout.widget.GridLayout
                    app:columnCount="2"
                    app:rowCount="1"
                    android:layout_gravity="center"
                    app:alignmentMode="alignMargins"
                    app:columnOrderPreserved="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/md_blue_grey_900"
                        android:layout_width="wrap_content"
                        app:layout_gravity="center"
                        android:layout_height="match_parent"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:id="@+id/listcar"
                            android:orientation="vertical"
                            android:background="#fff"
                            android:padding="16dp"
                            android:gravity="center"
                            android:layout_width="150dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:gravity="center"
                                android:id="@+id/listcarcare"
                                android:src="@drawable/rmutl"
                                android:layout_width="200dp"
                                android:layout_height="200dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_gravity="center"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="5dp">

                        <LinearLayout

                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/sic"
                                android:layout_width="200dp"
                                android:layout_height="200dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.gridlayout.widget.GridLayout>

                <androidx.gridlayout.widget.GridLayout
                    app:columnCount="1"
                    app:rowCount="1"
                    app:alignmentMode="alignMargins"
                    app:columnOrderPreserved="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/md_blue_grey_900"
                        android:layout_width="match_parent"
                        app:layout_gravity="center"
                        android:layout_height="match_parent"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_marginTop="20dp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ผู้พัฒนา"
                                android:textColor="@color/md_pink_A400"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="นายเอกชัย ฉัตรพงศ์เลอเลิศ"
                                android:textColor="@color/colorBackground"
                                android:textSize="18sp"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/abc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="วท.บ.เทคโนโลยีสารสนเทศ"
                                android:textColor="@color/md_amber_A400"
                                android:textSize="18sp"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="อาจารย์ที่ปรึกษา"
                                android:textColor="@color/md_pink_A400"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ผศ.กฤตาพร พัชระสุภา"
                                android:textColor="@color/colorBackground"
                                android:textSize="18sp"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="อาจารย์ที่ปรึกษาร่วม"
                                android:textColor="@color/md_pink_A400"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="อาจารย์ธนิสสรา พินิจมนตรี"
                                android:textColor="@color/colorBackground"
                                android:textSize="18sp"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.gridlayout.widget.GridLayout>
                <Button
                    android:id="@+id/singout"
                    style="@style/Button8"
                    android:gravity="center"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"

                    android:text="ออกจากระบบ" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>